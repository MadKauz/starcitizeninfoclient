<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_big" >

    <View
        android:id="@+id/glowTop"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/glow_top" />

    <ExpandableListView
        android:id="@+id/TimelineListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glowTop"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/glowLeftTop"
        android:cacheColorHint="#00000000"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:visibility="gone" />

    <View
        android:id="@+id/glowLeftTop"
        android:layout_width="2dp"
        android:visibility="gone"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/TimelineListView"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/TimelineListView"
        android:layout_marginLeft="4dp"
        android:background="@color/fontBlueDefaultColor" />
    
        <TextView
        android:id="@+id/EmptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textColor="@color/bluishGrey"
        android:textSize="16sp" />

</RelativeLayout>