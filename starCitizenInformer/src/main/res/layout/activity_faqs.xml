<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_big" >

    <Spinner
        android:id="@+id/FaqsSelectionSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="@color/fontBlueDefaultColor" />

    <TextView
        android:id="@+id/FaqsLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FaqsSelectionSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/loading"
        android:textColor="@color/fontBlueDefaultColor"
        android:textSize="20sp"
        android:visibility="invisible" />

    <View
        android:id="@+id/MainVerticalDivider"
        android:layout_width="0.5dp"
        android:layout_height="0.5dp"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/glowTop"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/glow_top" />

    <ScrollView
        android:id="@+id/scrollFaq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_below="@+id/FaqsLoading"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/FAQText1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/fontBlueDefaultColor"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/glowLeftTop"
        android:visibility="gone"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/scrollFaq"
        android:layout_alignTop="@+id/scrollFaq"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/fontBlueDefaultColor" />

</RelativeLayout>