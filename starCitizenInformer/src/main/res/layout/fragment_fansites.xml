<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_big" >

    <ListView
        android:id="@+id/fanSitesListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fansiteDisclaim"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/glowLeftTop"
        android:layout_marginTop="4dp"
        android:cacheColorHint="#00000000"
        android:divider="#55777777"
        android:dividerHeight="1dp"
        android:padding="0.5dp" />

    <View
        android:id="@+id/glowLeftTop"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignBottom="@+id/fanSitesListView"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/fanSitesListView"
        android:layout_marginLeft="4dp"
        android:background="@color/fontBlueDefaultColor" />

    <View
        android:id="@+id/glowTop"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/glow_top" />

    <TextView
        android:id="@+id/fansiteDisclaim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/disclaimText"
        android:textColor="@color/bluishGrey"
        android:textSize="12sp" />

</RelativeLayout>