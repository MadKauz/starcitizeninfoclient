<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_styleless_cornered_normal"
    android:layout_margin="@dimen/widget_margin" >

    <TextView
        android:id="@+id/widget_citizen_desc"
        style="@style/newsTitleTextStyle"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingTop="0dp"
        android:text="@string/widgetDescCitizen"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_citizen_val"
        style="@style/newsTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/widget_citizen_desc"
        android:layout_toLeftOf="@+id/widget_informer_button"
        android:layout_toRightOf="@+id/widget_citizen_desc"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingTop="0dp"
        android:textColor="@color/blueCircleColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/widget_funds_desc"
        style="@style/newsTitleTextStyle"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/widget_citizen_desc"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingTop="0dp"
        android:text="@string/widgetDescFunds"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_funds_val"
        style="@style/newsTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/widget_funds_desc"
        android:layout_toLeftOf="@+id/widget_informer_button"
        android:layout_toRightOf="@+id/widget_funds_desc"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingTop="0dp"
        android:textColor="@color/blueCircleColor"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/widget_informer_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/widget_refresh_button"
        android:background="@drawable/list_item_styleless"
        android:contentDescription="@string/appName"
        android:gravity="left|center_vertical"
        android:paddingRight="4dp"
        android:src="@drawable/ic_push_small"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/widget_refresh_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/list_item_styleless"
        android:contentDescription="@string/appName"
        android:gravity="left|center_vertical"
        android:paddingRight="0dp"
        android:src="@drawable/widget_refresh"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/widgetProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_no_connection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/widgetNoConn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_divider_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/widget_refresh_button"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:background="@color/blueCircleColor" />

    <LinearLayout
        android:id="@+id/widget_button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/widget_divider_top"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="19dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/widget_button_1"
            style="@style/newsTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/list_item_style"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/widget_button_2"
            style="@style/newsTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/list_item_style"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/widget_button_3"
            style="@style/newsTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/list_item_style"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/widget_button_4"
            style="@style/newsTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/list_item_style"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/widget_button_5"
            style="@style/newsTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/list_item_style"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>