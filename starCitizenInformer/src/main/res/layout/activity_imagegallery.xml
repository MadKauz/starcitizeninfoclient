<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ImageGalleryPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/ImageGalleryInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#77000000"
        android:padding="4dp"
        android:text="@string/imageGalleryHint"
        android:textColor="@color/bluishGrey"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ImageGalleryCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rsi_button_style"
        android:text="@string/close"
        android:textColor="@color/fontBlueDefaultColor"
        android:visibility="invisible" />

</RelativeLayout>