<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/favouritesItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/favouritesItemClose"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/favouritesItemTitle"
        style="@style/newsTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/favouritesItemType"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/favouritesItemPostedImage"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="85dp"
        android:layout_toLeftOf="@+id/favouritesItemPosted"
        android:contentDescription="@string/appName"
        android:src="@drawable/rsi_posted" />

    <TextView
        android:id="@+id/favouritesItemPosted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="82dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/bluishGrey"
        android:textSize="14sp" />

    <View
        android:id="@+id/favouritesItemClickView"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/list_item_style" />

    <ImageButton
        android:id="@+id/favouritesItemClose"
        style="@style/newsTitleTextStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/transparent_button_style"
        android:contentDescription="@string/appName"
        android:scaleType="center"
        android:src="@drawable/rsi_close" />

    <View
        android:id="@+id/favouritesItemCornerUpperLeft"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rsi_corner_upper_left" />

    <View
        android:id="@+id/favouritesItemCornerLowerLeft"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/rsi_corner_lower_left" />

    <View
        android:id="@+id/favouritesItemCornerUpperRight"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rsi_corner_upper_right" />

    <View
        android:id="@+id/favouritesItemCornerLowerRight"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/rsi_corner_lower_right" />

</RelativeLayout>