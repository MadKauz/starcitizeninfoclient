<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360" >
            <shape
                android:shape="oval"
                android:useLevel="false" >
                <size
                    android:height="100dp"
                    android:width="100dp" />

                <gradient
                    android:centerColor="#ff000000"
                    android:centerY="1"
                    android:endColor="@color/fontBlueDefaultColor"
                    android:startColor="#ff000000"
                    android:type="sweep"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>
    <item>
        <bitmap android:src="@drawable/sc_high_rez" />
    </item>

</layer-list>